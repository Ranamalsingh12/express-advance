<%- include('header') -%>

<div id="login" class="text-center center-div">
    <div class="container w-25 border py-5">
         <div class="title pb-5">
             <h2 class="font-weight-bold">
                Login System
             </h2>
             <span>login for the existing user</span>
             <% if(locals.logout){
                  <div class="alert alert-success text-center">
                    <h6>Logged out sucessfully</h6>
                  </div>
             }
             %>
         </div>
         <form action="/route/login" method="POST">
             <div class="form-group">
                 <input type="email" class="form-control" placeholder="email" name="email">
                 <small class="form-text text-muted text-left">Register email address</small>
             </div><div class="form-group">
                 <input type="password" class="form-control" placeholder="password" name="password">
             </div>
             <button type="submit" class="btn btn-light mt-3">Submit</button>
         </form>
    </div>
</div>


<%- include('footer') -%>